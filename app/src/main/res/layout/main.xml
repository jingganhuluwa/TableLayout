<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="1">

        <TextView
            android:gravity="center"
            android:text="表一" />
        <TableRow>
            <TextView
                android:text="列0"/>
            <TextView
                android:text="列1"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TextView
            android:gravity="center"
            android:text="表二"/>

        <TableRow>
            <TextView android:text="列0不能伸展"/>
            <TextView
                android:gravity="right"
                android:text="列1能伸展"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:text="表三"/>

        <TableRow>
            <TextView android:text="这一列很长，撒娇啊俄护法哈哈随即开枪err"/>
            <TextView
                android:text="这列被挤到屏幕外"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0">

        <TextView
            android:gravity="center"
            android:text="表四"/>

        <TableRow>
            <TextView android:text="由于设置了伸缩，不会挤，阿斯日挨饿日全额计发酵"/>
            <TextView
                android:text="不会被挤"/>
        </TableRow>
    </TableLayout>
</LinearLayout>